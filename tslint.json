{
    "extends": "tslint-consistent-codestyle",
    "rules": {
        "no-trailing-whitespace": true,
        "no-consecutive-blank-lines": [true, 3],
        "indent": [true, "tabs"],

        "new-parens": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        
        "no-collapsible-if": true,
        "ext-curly": [
            true,
            "consistent",
            "else",
            "nested-if-else",
            "braced-child"
          ],
        "naming-convention": [
            true,
            {"type": "default", "modifiers": ["private", "protected"], "format": "camelCase", "leadingUnderscore": "require", "trailingUnderscore": "forbid"},
            {"type": "default", "modifiers": "local", "format": "camelCase", "leadingUnderscore": "forbid", "trailingUnderscore": "forbid"},
            {"type": "default", "modifiers": "public", "format": "PascalCase", "leadingUnderscore": "forbid", "trailingUnderscore": "forbid"}
        ]
    }
}
